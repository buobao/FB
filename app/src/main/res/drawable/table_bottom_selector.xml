<?xml version="1.0" encoding="UTF-8"?>
<inset android:insetTop="1.0px" android:insetBottom="1.0px"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true" >
            <shape>
                <solid android:color="@color/base_item_bg_color_pressed" />
            </shape>
        </item>
        <item android:state_checked="true" >
            <shape>
                <solid android:color="@color/base_item_bg_color_pressed" />
            </shape>
        </item>
        <item android:state_selected="true" >
            <shape>
                <solid android:color="@color/base_item_bg_color_pressed" />
            </shape>
        </item>
        <item>
            <shape>
                <solid android:color="@color/base_item_bg_color_default" />
            </shape>
        </item>
    </selector>
</inset>